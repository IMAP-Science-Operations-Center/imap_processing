{
	"name": "Hello",
 	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "bullseye"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"version": "latest"
		}, "ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest"
		}
	},
	"forwardPorts": [6080],
	"postCreateCommand": "poetry install && source $(poetry env info --path)/bin/activate",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	}
}
